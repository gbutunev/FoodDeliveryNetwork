@using FoodDeliveryNetwork.Common;

@if (TempData.ContainsKey(AppConstants.NotificationTypes.ErrorMessage))
{
    <script>toastr.error('@TempData[AppConstants.NotificationTypes.ErrorMessage]');</script>
}

@if (TempData.ContainsKey(AppConstants.NotificationTypes.WarningMessage))
{
    <script>toastr.warning('@TempData[AppConstants.NotificationTypes.WarningMessage]');</script>
}

@if (TempData.ContainsKey(AppConstants.NotificationTypes.InfoMessage))
{
    <script>toastr.info('@TempData[AppConstants.NotificationTypes.InfoMessage]');</script>
}

@if (TempData.ContainsKey(AppConstants.NotificationTypes.SuccessMessage))
{
    <script>toastr.success('@TempData[AppConstants.NotificationTypes.SuccessMessage]');</script>
}