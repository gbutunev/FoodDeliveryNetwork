@using FoodDeliveryNetwork.Web.ViewModels.Home;

@model CustomerDetailedOrderViewModel

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Restaurant Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Restaurant Name:</strong> @Model.RestaurantName</p>
                    <p><strong>Address:</strong> @Model.RestaurantAddress</p>
                    <p><strong>Phone Number:</strong> @Model.RestaurantPhoneNumber</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Order Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Order ID:</strong> @Model.Id</p>
                    <p><strong>Delivery Address:</strong> @Model.Address</p>
                    <p><strong>Order Status:</strong> <span class="order-status-badge order-status-@Model.OrderStatus.ToString().ToLower()">@Model.OrderStatus.ToString()</span></p>
                    <p><strong>Created On:</strong> @Model.CreatedOn.ToString("yyyy-MM-dd HH:mm:ss")</p>
                    <p><strong>Total Price:</strong> @Model.TotalPrice</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Order Details</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group">
                        @foreach (var dish in Model.Dishes)
                        {
                            <li class="list-group-item">
                                <div class="row">
                                    <div class="col-md-6">
                                        <p><strong>@dish.DishName</strong></p>
                                    </div>
                                    <div class="col-md-3">
                                        <p>Quantity: @dish.Quantity</p>
                                    </div>
                                    <div class="col-md-3 text-end">
                                        <p>Price: @dish.UnitPrice</p>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div class="card-footer">
                    <p class="text-end">Total Price: @Model.TotalPrice</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .order-status-badge {
        font-size: 14px;
        padding: 5px 10px;
        border-radius: 5px;
        text-transform: capitalize;
        font-weight: bold;
        width: fit-content;
    }

    .order-status-pending {
        background-color: #ffc107;
        color: #000;
    }

    .order-status-cooking {
        background-color: #17a2b8;
        color: #fff;
    }

    .order-status-readyforpickup {
        background-color: #28a745;
        color: #fff;
    }

    .order-status-ontheway {
        background-color: #007bff;
        color: #fff;
    }

    .order-status-delivered {
        background-color: #198754;
        color: #fff;
    }

    .order-status-cancelledbycustomer,
    .order-status-cancelledbyrestaurant,
    .order-status-returnedtorestaurant {
        background-color: #dc3545;
        color: #fff;
    }
</style>
