@using FoodDeliveryNetwork.Web.ViewModels.Home;

@model CustomerRestaurantViewModel

<div class="card" style="width: 18rem;">
    @if (Model.ImageGuid is not null && Model.ImageType is not null)
    {
        <img src="data:@Model.ImageType;base64,@Convert.ToBase64String(Model.Image)" alt="Image of @Model.Name" class="card-img-top card-img-custom" />
    }
    else
    {
        <img src="./images/no-img-placeholder.jpg" alt="No image" class="card-img-top card-img-custom" />
    }
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        @if (Model.Description is not null)
        {
            <p class="card-text" style="word-break: break-word;">@(Model.Description.Length <= 200 ? Model.Description : Model.Description.Substring(0, 197) + "...")</p>
        }
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">@Model.Address</li>
        <li class="list-group-item">@Model.PhoneNumber</li>
    </ul>
    <div class="card-body d-flex">
        <a href="/Home/Restaurant/@Model.Handle" class="card-link mx-auto my-auto">Order now</a>
    </div>
</div>